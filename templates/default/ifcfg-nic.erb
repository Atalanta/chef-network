# /etc/sysconfig/network-scripts/ifcfg-<%= @interface %>
#
# This file is managed by Chef
# Do not edit this file manually

DEVICE="<%= @interface %>"
ONBOOT="<%= @onboot %>"
NM_CONTROLLED="<%= @nm_controlled %>"
<% unless @hwaddr == false -%>
HWADDR="<%= @hwaddr %>"
<% end -%>
<% unless @uuid == false -%>
UUID="<%= @uuid %>"
<% end -%>
<% if @bridge == "member" -%>
TYPE="Ethernet"
BRIDGE="<%= @bridgename %>"
<% elsif @bridge == true -%>
TYPE="Bridge"
<% else -%>
TYPE="Ethernet"
<% end -%>
<% unless @bridge == "member" -%>
<% if @dhcp == true -%>
BOOTPROTO="dhcp"
<% end -%>
<% if @dhcp == false -%>
BROADCAST=<%= @broadcast %>
IPADDR=<%= @ipaddr %>
NETWORK=<%= @network %>
GATEWAY=<%= @gateway %>
<% end -%>
<% end -%>